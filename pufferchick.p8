cols={}

function _init()
	cls()
	pc={x=52,y=52,f=false}
	d=2
	
	cols[0]=0
	cols[8]=9
	cols[9]=10
	cols[10]=6
	cols[6]=5
	cols[5]=0
end

function _update()
	if btn(0) then
		pc.x-=d
		pc.f=true
	elseif btn(1) then
		pc.x+=d
		pc.f=false
	end
	
	if btn(2) then
		pc.y-=d
	elseif btn(3) then
		pc.y+=d
	end
	
	if pc.x < -24 then
	 pc.x=128
	elseif pc.x > 128 then
	 pc.x=-24
	end

	if pc.y < -24 then
		pc.y=128
	elseif pc.y > 128 then
		pc.y=-24
	end

	for i=0,2000 do
		local x=flr(rnd(128))
		local y=flr(rnd(128))
		col=pget(x,y)
		pset(x,y,cols[col])
	end
end

function _draw()
	spr(1, pc.x, pc.y, 3, 3,pc.f)
end
