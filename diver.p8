-- diver
-- @aquova

function _init()
	screen=128
	mapwidth=2*screen
	tilesize=8
	maxdepth=0
	camoffset=-screen/2
	p1=newplayer()
	cam={x=0,y=camoffset+4}
	camera(cam.x,cam.y)
end

function _update()
	p1:update()
	p1:setcam()
end

function _draw()
	cls(12)
	rectfill(0,camoffset,mapwidth,0,7)
	map(0,0,0,0,mapwidth/8,mapwidth/8)
	p1:draw()
end
