function _init()
	screen=128
	player={x=0,y=0,s=8,f=false}
	cam={x=player.x-screen/2,y=player.y-screen/2}
	camera(cam.x,cam.y)
end

function _update()
	if btn(⬅️) then
		player.x-=1
		player.f=true
	end
	if btn(➡️) then
		player.x+=1
		player.f=false
	end
	if (btn(⬆️)) player.y-=1
	if (btn(⬇️)) player.y+=1
	
	--cam.x,cam.y=player.x-screen/2,player.y-screen/2
	--camera(cam.x,cam.y)
end

function _draw()
	cls(11)
	palt(0,false)
	palt(14,true)
	--spr(1,player.x,player.y,1,1,player.f,false)
	sspr(8,0,8,8,player.x,player.y,player.s+8,player.s+8,player.f,false)
end
